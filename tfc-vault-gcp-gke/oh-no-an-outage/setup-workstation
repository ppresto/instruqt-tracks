#!/bin/bash -l
set -e

set-workdir /root/terraform
cd /root/terraform

# Give the student a head start.
cp exercises/remote_backend.tf remote_backend.tf

mkdir -p /root/.terraform.d
cat <<-EOF > /root/.terraform.d/credentials.tfrc.json
{
  "credentials": {
    "app.terraform.io": {
      "token": "YOURTOKEN"
    }
  }
}
EOF

exit 0
