#!/bin/bash

if [ -f /tmp/skip-check ]; then
    rm /tmp/skip-check
    exit 0
fi

#Check we have 5 VPCs
vpc=$(aws ec2 describe-vpcs | jq '[.. |."State"? | select(. == "available")] | length')

#should be 5 total VPCs
if [ $vpc -le 0 ]; then
  fail-message "VPCs did not provision successful."
  exit 1
fi

exit 0
